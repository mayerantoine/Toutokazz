
@model IEnumerable<Toutokaz.Domain.Models.tb_section>

@{
    ViewBag.Title = "Toutokazz Admin - Lister Section";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPagev2.cshtml";
}

  <div class="inner-box"> 
   <h2 class="title-2"> <i class="icon-docs"></i> Liste des Sections</h2>
        @Html.Raw(@ViewBag.Message)
                  <table class="table table-striped table-bordered add-manage-table table demo">
                    <tr>
                        <th>Section</th>
                        <th>Description</th>
                        <th></th>
   
                    </tr>                  
                      @foreach (var item in Model)
                      {
                          <tr>
                             

                              <td>@Html.DisplayFor(model=>item.section_title)</td>
                              <td>@Html.DisplayFor(model=>item.section_description)</td>
                              <td>
                                     <a class="btn btn-primary btn-outline btn-xs" href="@Url.Action("Edit","Section",new { id = item.id_section})"><span class="glyphicon glyphicon-edit"></span> Editer</a>
                                    <a class="btn btn-danger btn-outline btn-xs" href="@Url.Action("Delete","Section",new { id = item.id_section})"><span class="glyphicon glyphicon-remove"></span> Supprimer</a>
                        

                              </td>
                          </tr>
                      }
                  </table>

         </div>

