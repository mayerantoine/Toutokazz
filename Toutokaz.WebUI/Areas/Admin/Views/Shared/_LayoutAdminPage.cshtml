<!--[if !IE]><!-->
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <!--[if lt IE 9]
        <script src="~/Scripts/html5shiv.js"  type="text/javascript"></script>"
        <script src="~/Scripts/respond.min.js" type="text/javascript"></script>
    <![endif]-->

    <title>@ViewBag.Title - Petites Annonces Gratuites, le meilleur d'Haiti</title>
    <link href='http://fonts.googleapis.com/css?family=Crimson+Text:700italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Tangerine">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Toutokazz - Petites annonces pour toutes les occasions, Haiti">
    <meta name="keywords" content="annonces, haiti, classified ads, ads,">
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/czsale-carousel.css" rel="stylesheet" />
    <link href="~/Content/css/czsale.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/czsale-responsive.css" rel="stylesheet" />
    <link href="~/Content/css/select2.css" rel="stylesheet" />
    @RenderSection("conversion_script", false)
</head>
   

<body>
   <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header" >
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><small>Petites annonces, pour toutes les occasions</small></a>
        </div>
        <div class="navbar-collapse collapse">
           <ul class="nav navbar-nav navbar-right">
        
                   <li class="@Html.ActivePage("Home", "Index", null)"><a  href="@Url.Action("Index", "Home", new { area=""})">Accueil</a></li>
              @if (Request.IsAuthenticated) {
                 <li class="@Html.ActivePage("Annonces","Index",null)"><a href="@Url.Action("Index", "Annonces", new { area = "Admin" })">Administration</a></li>
              }
              else {                
                   <li class="@Html.ActivePage("Account","Login",null)"><a href="@Url.Action("Login","Account",new { area = "" })">Mon Compte</a></li>
              }
            <li class="dropdown">
                  @Html.Partial("_LoginPartial")
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <!-- Fixed navbar-->



  <div id="maincontainer" class="container wrapper shadow"> 
          <div class="row">
           <div class="col-md-12">
               <div id="logo" class="col-lg-6">
              <div id="logo-img" style="vertical-align:central;font-weight:bold;color:#f99146;font-size:medium" >
                  <a href="@Url.Action("index","home")"><img src="~/Content/img/logo-revamp.png" /></a>
                  (Beta)
             </div>     
           </div> 
              
          </div>
          </div> 


       <!-- Static navbar -->        
      <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#czsale-navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" >
          <ul class="nav navbar-nav">
                 <li class="active"><a href="#"><span class="glyphicon glyphicon-home"></span>Tableau de Bord</a></li>
            <li><a href="@Url.Action("Index", "Annonces", new { area = "Admin" })"> Toutes les Annonces </a>            
            <li><a href="@Url.Action("Index","Section", new { area= "Admin"})">Section</a></li>
             <li><a href="@Url.Action("Index","Category",new {area ="Admin"})">Category</a></li>
              </ul>
               <ul class="nav navbar-nav navbar-right">
                   <li><a href="@Url.Action("Create","Account",new {area ="Admin"})">Créer Compte</a></li>
                <li><a href="@Url.Action("userlist","Account",new {area ="Admin"})">Utilisateurs</a></li>
              </ul>
        </div>
      </nav>
      <!-- /Static navbar --> 
    
 
        <div class="row content">
            @RenderBody()
        </div>
        <div class="footer">
        <div class="well well-sm">
          <div class="pull-left">
            <ul class="nav nav-pills">
              <li><a href="#"><span class="glyphicon glyphicon-plus"></span>Deposer une annonce</a></li>
            </ul>
          </div>
          <div class="pull-right">
            <ul class="nav nav-pills">
              <li><a href="#">Aide</a></li>
              <li><a href="#">Contact</a></li>
              <li><a href="#">Regles d'utilisation</a></li>
            </ul>
          </div>
          <div class="clearfix">&nbsp;</div>
        </div>
        <div class="pull-right">
          <p class="text-muted"><small>Copyright &copy; 2013-2014, Toutokazz </small></p>
        </div>
      </div>
      </div>
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.slides.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/toutokaz.js"></script>
    <script src="~/Scripts/select2.js"></script>
      </body>
    </html>



