<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="assets/ico/favicon.png">

    <title>@ViewBag.Title</title>
    @RenderSection("open_graph_tags", false)
    <!-- Bootstrap core CSS -->
    <link href="~/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- styles needed for carousel slider -->
    <link href="~/assets/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/assets/css/owl.theme.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link href="~/assets/plugins/bxslider/jquery.bxslider.css" rel="stylesheet" />
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <!-- Custom styles for this template -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/fileinput.css" rel="stylesheet" />
    <!-- Just for debugging purposes. -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <!-- include pace script for automatic web page progress bar  -->

    <script>
    paceOptions = {
      elements: true
    };
    </script>
    <script src="~/assets/js/pace.min.js"></script>
</head>
<body>
    <div class="wrapper">
        <div class="header">
            <nav class="navbar navbar-site navbar-default" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                        <a href="@Url.Action("index","home")" class="navbar-brand logo logo-title">
                            <!-- Original Logo will be placed here  -->
                            <img  class="img-responsive hidden-xs" src="@Url.Content("~/assets/images/toutokazz_logo.png")" alt="Toutokazz - Le meilleur site de petites annonces d'Haiti" />
                            <img class="img-responsive visible-xs" src="@Url.Content("~/assets/images/toutokazz_logo_mobile.png")" alt="Toutokazz - Le meilleur site de petites annonces d'Haiti" />
                        </a>
                    </div>
                    <div class="navbar-collapse collapse">

                        <ul class="nav navbar-nav navbar-right">
                            @if (!Request.IsAuthenticated)
                            {
                            <li><a href="@Url.Action("Login", "account")">Connexion</a></li>
                            <li><a href="@Url.Action("Create", "Account")">Créer un compte </a></li>
                            }
                            else
                            {

                                <li><a href="@Url.Action("LogOut", "Account",new { area=""})">Se déconnecter <i class="glyphicon glyphicon-off"></i> </a></li>
                                if (Roles.IsUserInRole("administrateur"))
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <span>@User.Identity.Name</span> <i class="icon-user fa"></i> <i class=" icon-down-open-big fa"></i></a>
                                        <ul class="dropdown-menu user-menu">
                                            <li class="active"><a href="#"><i class="icon-home"></i> Mon Profil</a></li>
                                            <li><a href="@Url.Action("Index", "annonces", new { area = "Admin" })"><i class="icon-th-thumb"></i> Mes Annonces </a></li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <span>@User.Identity.Name</span> <i class="icon-user fa"></i> <i class=" icon-down-open-big fa"></i></a>
                                    <ul class="dropdown-menu user-menu">
                                        <li class="active"><a href="#"><i class="icon-home"></i> Mon Profil</a></li>
                                        <li><a href="@Url.Action("Index", "Annonces",new {area = "Admin" })"><i class="icon-th-thumb"></i> Mes Annonces </a></li>
                                        <li><a href="@Url.Action("Index", "Annonces", new { area = "Admin",id_ad_status = 3})"><i class="icon-folder-close"></i> Annonces Desactivées</a></li>
                                        <li><a href="@Url.Action("Index", "Annonces",new { area = "Admin",id_ad_status = 2 })"><i class="icon-hourglass"></i> Annonces Pendantes </a></li>
                                    </ul>
                                </li>}
                            }

                            <li class="postadd"><a class="btn btn-block   btn-border btn-post btn-danger" href="@Url.Action("deposerannonce","annonces")">Déposer une annonce</a></li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </div>
        <!-- /.header -->
    
        <div class="main-container">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 page-sidebar">
                        <aside>
                            <div class="inner-box">
                                <div class="user-panel-sidebar">
                                    <div class="collapse-box">
                                        <h5 class="collapse-title no-border"> Tableau de bord <a class="pull-right" data-toggle="collapse" href="#MyClassified"><i class="fa fa-angle-down"></i></a></h5>
                                        <div id="MyClassified" class="panel-collapse collapse in">
                                            <ul class="acc-list">
                                                <li><a href="@Url.Action("EditProfile","Annonces")"><i class="icon-home"></i> Mon Profil </a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /.collapse-box  -->
                                    <div class="collapse-box">
                                        <h5 class="collapse-title"> Toutes les Annonces <a class="pull-right" data-toggle="collapse" href="#MyAds"><i class="fa fa-angle-down"></i></a></h5>
                                        <div id="MyAds" class="panel-collapse collapse in">
                                            <ul class="acc-list">
                                                <li class="active"><a href="@Url.Action("Index", "Annonces", new { area = "Admin" })"><i class="icon-docs"></i> Mes Annonces <span class="badge">@Html.Encode(ViewBag.CountMesAnnonces)</span> </a></li>
                                                <li><a href="@Url.Action("Index", "Annonces", new { area = "Admin" , id_ad_status = 2})"><i class="icon-folder-close"></i> Annonces désactivées<span class="badge">@Html.Encode(ViewBag.CountMesAnnoncesDesactives)</span></a></li>
                                                <li><a href="@Url.Action("Index", "Annonces", new { area = "Admin" , id_ad_status = 3 })"><i class="icon-hourglass"></i> Annonces Pendantes <span class="badge">@Html.Encode(ViewBag.CountMesAnnoncesPendantes)</span></a></li>

                                            </ul>
                                        </div>
                                    </div>
                                    <div class="collapse-box">
                                        <h5 class="collapse-title"> Nos Sections <a class="pull-right" data-toggle="collapse" href="#MySection"><i class="fa fa-angle-down"></i></a></h5>
                                        <div id="MySection" class="panel-collapse collapse in">
                                            <ul class="acc-list">
                                                <li><a href="@Url.Action("Index","Section", new { area= "Admin"})"><i class="icon-docs"></i> Section  </a></li>
                                                <li><a href="@Url.Action("Create","Section",new { area="Admin"})"><i class="icon-plus"></i> Ajouter Section </a></li>

                                            </ul>
                                        </div>
                                    </div>
                                    <div class="collapse-box">
                                        <h5 class="collapse-title"> Nos Categories <a class="pull-right" data-toggle="collapse" href="#MyCategory"><i class="fa fa-angle-down"></i></a></h5>
                                        <div id="MyCategory" class="panel-collapse collapse in">
                                            <ul class="acc-list">
                                                <li><a href="@Url.Action("Index","Category",new {area ="Admin"})"><i class="icon-docs"></i> Categories </a></li>
                                                <li><a href="@Url.Action("Create","Category",new { area="Admin"})"><i class="icon-plus"></i> Ajouter Categorie </a></li>

                                            </ul>
                                        </div>
                                    </div>
                                    <div class="collapse-box">
                                        <h5 class="collapse-title"> Nos Utilisateurs <a class="pull-right" data-toggle="collapse" href="#Users"><i class="fa fa-angle-down"></i></a></h5>
                                        <div id="Users" class="panel-collapse collapse in">
                                            <ul class="acc-list">
                                                <li><a href="@Url.Action("userlist","Account",new {area ="Admin"})"><i class="icon-docs"></i> Utilisateurs <span class="badge">5000</span> </a></li>
                                                <li><a href="@Url.Action("Create","Account",new {area ="Admin"})"><i class="icon-plus"></i> Creer compte </a></li>

                                            </ul>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- /.inner-box  -->

                        </aside>
                    </div>
                    <div class="col-sm-9 page-content">
                        @RenderBody()
                    </div>
                </div>
      
            </div>
            <!-- /.container -->
        </div>    
        <!-- /.main-container -->

        <div class="footer" id="footer">
            <div class="container">
                <ul class=" pull-left navbar-link footer-nav">
                    <li><a href="@Url.Action("Index","Home", new {area="" })"> Accueil </a> <a href="@Url.Action("quisommesnous","Home",new { area="" })"> Qui sommes-nous? </a> <a href="@Url.Action("conditionsdutilisation","Home", new { area="" })"> Conditions d'utilisation </a> <a href="@Url.Action("contact","Contact",new {area="" })"> Contactez-nous </a> <a href="@Url.Action("faq","Home", new {area="" })"> FAQ </a>
                </ul>
                <ul class=" pull-right navbar-link footer-nav">
                    <li> &copy; 2015 Toutokazz </li>
                </ul>
            </div>

        </div>
        <!-- /.footer --> 

    </div>
    <!-- /.wrapper --> 


