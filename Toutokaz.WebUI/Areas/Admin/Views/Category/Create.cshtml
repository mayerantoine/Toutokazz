@model Toutokaz.Domain.Models.tb_category
@{
    ViewBag.Title = "Toutokazz - Admin Ajouter Catégorie";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPagev2.cshtml";
}


<div class="inner-box">    
        <h2 class="title-2">Ajouter Catégorie</h2>
      <form class="form-horizontal" role="form" method="post">
    @Html.ValidationSummary(true)
               <div class="form-group">                        
                            <label for="lblSectiontitle" class="col-sm-3 control-label">Titre Section</label>
                            <div class="col-sm-6">               
                                @Html.DropDownList("id_section",@ViewBag.section as SelectList, new {@class="form-control", id="section_title"})
                                  @Html.ValidationMessageFor(model => model.tb_section.section_title)
                            </div>
                     </div>

              <div class="form-group">                             
                            <label for="lblcategory" class="col-sm-3 control-label">Categorie</label>
                            <div class="col-sm-6">               
                                @Html.TextBoxFor(model => model.category_title, new {@class="form-control", id="section_description"})
                                  @Html.ValidationMessageFor(model => model.category_title)
                            </div>
                     </div>
               <div class="form-group">                             
                            <label for="lblCategoryDesc" class="col-sm-3 control-label">Description</label>
                            <div class="col-sm-6">               
                                @Html.TextBoxFor(model => model.category_desctiption, new {@class="form-control", id="section_description"})
                                  @Html.ValidationMessageFor(model => model.category_desctiption)
                            </div>
                     </div>

                   <div class="form-group">  
                          <div class="col-sm-offset-3 col-sm-6">
                            <input type="submit" value="Sauvergarder" />
                           </div>
                       </div>  
   
</form>
</div>
