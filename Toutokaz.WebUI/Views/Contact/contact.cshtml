@model Toutokaz.Domain.Models.tb_contact
@{
    ViewBag.Title = "Toutokazz - Contactez-nous";
    ViewBag.page_description = "Toutokazz, Contactez-nous";
    ViewBag.description = "Toutokazz, Contactez-nous";
    ViewBag.ImageUrl = Url.Content("~/Content/images/bg_intro2.jpg");
    Layout = "~/Views/Shared/_LayoutPagev2.cshtml";
}

@section Script{
<script type="text/javascript">
    function onSuccessContact() {
        var form = $('#frmContact');
        form.find("input[type=text], textarea").val("");
        $('#load').hide();
    };
        
</script>
}

<div class="row clearfix">
    <div class="col-md-4">
            <div class="contact_info">
                <h5 class="list-title gray"><strong>Nos Coordonnées</strong></h5>

                <div class="contact-info ">
                    <div class="address">
                        <p class="p1">Port-au-Prince</p>
                        <p class="p1">Haiti </p>
                        <p>Email: equipe@toutokazz.com</p>
                        <p>Téléphone: 509 46464646</p>
                        <p>&nbsp;</p>
                        <div class="hidden">

                            <p><strong><a href="#">Get a Quote</a></strong></p>
                            <p><strong> <a href="login.html">Client Area Login</a></strong></p>
                            <p><strong> <a href="#skypeid" class="skype">Live Chat</a></strong></p>
                            <p> <strong> <a href="faq.html">Knowledge Base</a></strong></p>

                        </div>
                    </div>
                </div>

                <div class="social-list">
                    <a target="_blank" href="https://twitter.com/toutokazz"><i class="fa fa-twitter fa-lg "></i></a>
                    <a target="_blank" href="https://www.facebook.com/toutokazz."><i class="fa fa-facebook fa-lg "></i></a>
                    <a target="_blank" href="https://plus.google.com"><i class="fa fa-google-plus fa-lg "></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h5 class="list-title gray"><strong>Contactez-nous</strong></h5>
 
           @using (Ajax.BeginForm("contact","Contact", new AjaxOptions { InsertionMode = InsertionMode.Replace, LoadingElementDuration = 1000, UpdateTargetId = "contactmessage", HttpMethod = "Post", LoadingElementId = "load", OnSuccess = "onSuccessContact" }, new { @class = "form-horizontal", id="frmContact" }))
             {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="row">
                    <div id="contactmessage" class="contactmessage" style="margin:15px;">

                    </div>
                    <div id="load" class="" style="display:none; margin:15px;">
                        <img src="~/Content/img/toutokazz-loader.gif" />
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.nom, new { @class = "form-control", placeholder = "Votre nom" })
                                @Html.ValidationMessageFor(model => model.nom)
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.prenom, new { @class = "form-control", placeholder = "Votre Prénom" })
                                @Html.ValidationMessageFor(model => model.prenom)
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.email)
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.telephone, new { @class = "form-control", placeholder = "Téléphone" })
                                @Html.ValidationMessageFor(model => model.telephone)
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.message, new { @class = "form-control", rows = "8", placeholder = "Votre Message" })
                                @Html.ValidationMessageFor(model => model.message)
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Envoyer le message" class="btn btn-primary btn-mdd" />
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
           }
        </div> <!-- md-8-->
    </div>
