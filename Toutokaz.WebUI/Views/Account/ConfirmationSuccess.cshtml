@{
    ViewBag.Title = "Toutokazz - Confirmation Nouveau Compte";
    Layout = "~/Views/Shared/_LayoutPagev2.cshtml";
}

@section conversion_script {
    <!-- Facebook Conversion Code for Enregistrer annonceurs -->
    <script>
        (function () {
            var _fbq = window._fbq || (window._fbq = []);
            if (!_fbq.loaded) {
                var fbds = document.createElement('script');
                fbds.async = true;
                fbds.src = '//connect.facebook.net/en_US/fbds.js';
                var s = document.getElementsByTagName('script')[0];
                s.parentNode.insertBefore(fbds, s);
                _fbq.loaded = true;
            }
        })();
        window._fbq = window._fbq || [];
        window._fbq.push(['track', '6022744513141', { 'value': '0.01', 'currency': 'USD' }]);
    </script>
    <noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/tr?ev=6022744513141&amp;cd[value]=0.01&amp;cd[currency]=USD&amp;noscript=1" /></noscript>

}

<div class="row">
    <div class="col-md-12 page-content">
        <div class="inner-box category-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="alert alert-success pgray  alert-lg" role="alert">
                        <h2 class="no-margin no-padding">&#10004; Compliments! Votre Compte est activé.</h2>
                        <p>   Votre compte étant activé , vous pouvez vous connecter,rechercher et déposer gratuitement vos annonces!    </p>
                   
                    </div>
                </div>
            </div>
        </div>
        <!-- /.page-content -->
        <p>
            <a class="btn btn-md btn-warning" href="@Url.Action("Moncompte","account")"> Accéder a mon compte</a>
        </p>
    </div>
    <!-- /.row -->
</div>

