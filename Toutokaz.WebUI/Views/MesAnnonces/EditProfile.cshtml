@model Toutokaz.WebUI.Models.ProfileViewModel

@{
    ViewBag.Title = "Toutokazz - Mon Profil";
    Layout = "~/Views/Shared/_LayoutMesAnnoncesPagev2.cshtml";
}


<div class="inner-box">
    <div class="row">
        <div class="col-md-5 col-xs-4 col-xxs-12">
            <h3 class="no-padding text-center-480 useradmin"><a href=""> @Html.Label(Model.Nom), @Html.Label(Model.Prenom) </a> </h3>
        </div>
        <div class="col-md-7 col-xs-8 col-xxs-12">
            <div class="header-data text-center-xs">

                <!-- Traffic data -->
         

                <!-- revenue data -->
                <div class="hdata">
                    <div class="mcol-left">
                        <!-- Icon with green background -->
                        <i class="icon-th-thumb ln-shadow"></i>
                    </div>
                    <div class="mcol-right">
                        <!-- Number of visitors -->
                        <p><a href="#">@Html.Encode(ViewBag.CountMesAnnonces)</a><em>Annonces</em></p>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <!-- revenue data -->
             </div>
        </div>
    </div>
</div>

<div class="inner-box">
    <div class="welcome-msg">
        <h3 class="page-sub-header2 clearfix no-padding">Bonjour @Html.Label(Model.Nom), @Html.Label(Model.Prenom) </h3>
    </div>
    <div id="accordion" class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"> <a href="#collapseB1" data-toggle="collapse"> Editer Profile </a> </h4>
            </div>
            <div class="panel-collapse collapse in" id="collapseB1">
                <div class="panel-body">
                    @using (Html.BeginForm("EditProfile", "MesAnnonces", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            @Html.Raw(@ViewBag.Message)
                            @Html.ValidationSummary(true)
                        </div>
                        <div class="form-group">
                            @Html.Hidden("id_account", (object)Model.id_account)
                        </div>

                        <div class="form-group">

                            <label for="lblNom" class="col-sm-3 control-label">Nom</label>
                            <div class="col-sm-9">

                                @Html.TextBoxFor(model => model.Nom, new { @class = "form-control", id = "Nom", placeholder = "Nom" })
                                @Html.ValidationMessageFor(m => m.Nom)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lblPrenom" class="col-sm-3 control-label">Prenom</label>
                            <div class="col-sm-9">

                                @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control", id = "Prenom", placeholder = "Prenom" })
                                @Html.ValidationMessageFor(m => m.Prenom)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-sm-3 control-label">Alias anonnceur</label>
                            <div class="col-sm-9">

                                @Html.TextBoxFor(model => model.alias, new { type = "text", @class = "form-control", id = "alias", placeholder = "Votre alias" })
                                @Html.ValidationMessageFor(m => m.alias)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputTelephone" class="col-sm-3 control-label">Telephone</label>
                            <div class="col-sm-9">

                                @Html.TextBoxFor(model => model.telephone, new { @class = "form-control", id = "telephone", placeholder = "Telephone" })
                                @Html.ValidationMessageFor(m => m.telephone)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputAddresse" class="col-sm-3 control-label">Votre adresse</label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.address, new { @class = "form-control", id = "address", col = 20, rows = 5 })
                                @Html.ValidationMessageFor(m => m.address)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button id="btnvalider" type="submit" class="btn btn-primary">Valider</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
 
    </div>
    <!--/.row-box End-->

</div>

