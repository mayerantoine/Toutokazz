@model  IEnumerable<Toutokaz.Domain.Models.tb_ads>
@using Toutokaz.WebUI.Helpers
@using MvcSiteMapProvider.Web.Html
@using PagedList.Mvc

 <div class="col-lg-12" syle="padding:15px;">
                           <div class="row row-featured">
                               <div class="container box-title ">
                                   <div class="inner">
                                       <h2>
                                           Petites Annonces Similaires
                                       </h2>
                                   </div>
                               </div>

                               <div style="clear: both"></div>

                               <div class=" relative  content featured-list-row clearfix">

                                      <div class="no-margin featured-list-slider ">
                                       @foreach (var ads in Model)
                                       {
                                           <div>
                                               <a href="@Url.Action("details","Annonces", new { id= ads.id_ad, ad_title=ads.ad_title.ToSeoUrl()},null)">
                                                   <div class="thumbnail thumbnail-slide">

                                                       <img alt="@Url.Content(string.IsNullOrEmpty(ads.tb_ad_image.FirstOrDefault().image_filename)? "default-img.jpg" : ads.tb_ad_image.FirstOrDefault().image_filename)" src="@Url.Content(WebConfigurationManager.AppSettings["PhotosDir"] + (string.IsNullOrEmpty(ads.tb_ad_image.FirstOrDefault().image_filename) ? "default-img.jpg" : ads.tb_ad_image.FirstOrDefault().image_filename) + "?width=300&height=200")" class="img-responsive" />
                                                       <div class="caption">
                                                           <p><span>@Html.ActionLink(ads.ad_title, "details", "Annonces", new { id = ads.id_ad, ad_title = ads.ad_title.ToSeoUrl() }, new { @class = "slide-item-title" })</span><p>
                                                               @if (ads.id_section != 9 && ads.id_section != 8)
                                                               {

                                                                   <span class="slide-item-price">@Html.Raw(HttpUtility.HtmlDecode(ads.tb_devise.symbole)) @Html.Label(ads.ad_price + " ")</span>
                                                               }
                                                               @if (ads.ad_status == 4)
                                                               {
                                                               <p><label class="label label-danger vendu">vendu</label></p>
                                                               }

                                                           </div>

                                                       </div>

                                                   </a>

                                               </div>

                                       }
                                   </div>


                               </div>

                           </div>
                       </div>