
@model Toutokaz.WebUI.Areas.Admin.Models.SectionViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage.cshtml";
}

       <div class="row"> 
        <div class="col-lg-offset-8 col-lg-4">
              <a class="btn btn-primary btn-outline btn-sm" href="@Url.Action("Index","Section")">Annuler</a>
            <a class="btn btn-primary btn-outline btn-sm" href="@Url.Action("Create","Section")"><span class="glyphicon glyphicon-plus"></span>Nouveau</a>
            </div>           
    </div>
<div class="col-lg-10">
  <fieldset>
     <legend>AJOUTER SECTION</legend>
 </fieldset>  
  
              <div class="col-lg-9"> 
                     @Html.Raw(@ViewBag.Message)
                  <form class="form-horizontal" role="form" method="post">
                     @Html.ValidationSummary(true)
                   <div class="form-group">                        
                            <label for="lblSectiontitle" class="col-sm-3 control-label">Titre Section</label>
                            <div class="col-sm-9">               
                                @Html.TextBoxFor(model => model.section_title, new {@class="form-control", id="section_title"})
                                  @Html.ValidationMessageFor(model => model.section_title)
                            </div>
                     </div>
                     <div class="form-group">                             
                            <label for="lblSectionDesc" class="col-sm-3 control-label">Description</label>
                            <div class="col-sm-9">               
                                @Html.TextBoxFor(model => model.section_description, new {@class="form-control", id="section_description"})
                                  @Html.ValidationMessageFor(model => model.section_description)
                            </div>
                     </div>
                      <div class="form-group">  
                          <div class="col-sm-offset-3 col-sm-9">
                            <input type="submit" value="Sauvergarder" />
                           </div>
                       </div>   
                   </form>
          </div>   
</div>
