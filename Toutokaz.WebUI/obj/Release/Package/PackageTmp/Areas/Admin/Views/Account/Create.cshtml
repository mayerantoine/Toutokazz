@model Toutokaz.WebUI.Models.AccountViewModel

@{
    ViewBag.Title = "Toutokazz - Admin Creer Compte";
    ViewBag.description = "Bienvenue sur Toutokazz, Créer votre compte particulier et déposer une annonce";
    ViewBag.motscles = "toutokazz,toutokaz, annonces,compte,deposer,particulier,professionnel, haiti, classified ads, ads,site annonce, site annonces, petites";
    ViewBag.page_description = "Bienvenue sur Toutokazz, Créer votre compte particulier et déposer votre annonce";
    ViewBag.ImageUrl = Url.Content("~/Content/img/slides/Banner1a.jpg");
    
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage.cshtml";
}


<div class="col-lg-12">
    <div class="col-lg-6">
        <div id="creer-compte" class="well">
            <form class="form-horizontal" action="@Url.Action("CreateNoToken","account")" role="form" method="post">
                <div>
                    @Html.Raw(@ViewBag.Message)
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(true)

                    <label for="lblNom" class="col-sm-3 control-label">Nom</label>
                    <div class="col-sm-9">

                        @Html.TextBoxFor(model => model.Nom, new { @class = "form-control", id = "Nom", placeholder = "Nom" })
                        @Html.ValidationMessageFor(m => m.Nom)
                    </div>
                </div>
                <div class="form-group">
                    <label for="lblPrenom" class="col-sm-3 control-label">Prenom</label>
                    <div class="col-sm-9">

                        @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control", id = "Prenom", placeholder = "Prenom" })
                        @Html.ValidationMessageFor(m => m.Prenom)
                    </div>
                </div>
                <div class="form-group" id="type_utilisateur">
                    <label for="lblP" class="col-sm-3 control-label">Type d'utilisateur :</label>
                    <label for="lblParticulier" class="col-sm-3 control-label"> @Html.RadioButtonFor(model => model.account_type, 1, new { @class = "radio-inline", id = "account_type_1", name = "account_type" }) Particulier</label>
                    <label for="lblProfessionel" class="col-sm-4 control-label"> @Html.RadioButtonFor(model => model.account_type,2, new { @class = "radio-inline", id = "account_type_2", name = "account_type" }) Professionnel</label>            
                    @Html.ValidationMessageFor(m => m.account_type)
                </div>
                <div class="form-group" id="f_nom_entreprise">

                    <label for="lblNomEntreprise" class="col-sm-3 control-label">Nom de l'entreprise</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.nom_entreprise, new { @class = "form-control", id = "nom_entreprise", placeholder = "Nom  de l'entreprise" })
                        @Html.ValidationMessageFor(m => m.nom_entreprise)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-9">

                        @Html.TextBoxFor(model => model.Email, new { type = "email", @class = "form-control", id = "Email", placeholder = "Votre Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-3 control-label">Mot de Passe</label>
                    <div class="col-sm-9">

                        @Html.PasswordFor(model => model.password, new { @class = "form-control", id = "password", placeholder = "Mot de passe" })
                        <span class="help-block">8 carateres minimum,avec 1 alphanumerique et 1 special </span>
                        @Html.ValidationMessageFor(m => m.password)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPasswordConfirm" class="col-sm-3 control-label">Confirmer  mot de passe</label>
                    <div class="col-sm-9">
                        @Html.PasswordFor(model => model.confirmPassword, new { @class = "form-control", id = "confirmPassword", placeholder = "Mot de passe" })
                        @Html.ValidationMessageFor(m => m.confirmPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                En cliquant sur "Inscription" , vous acceptez nos <a href="@Url.Action("conditionsdutilisation","Home")">conditions d'utilisation</a>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-10">
                        <button id="btnvalider" type="submit" class="btn btn-primary btn-mdd">Inscription</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>  