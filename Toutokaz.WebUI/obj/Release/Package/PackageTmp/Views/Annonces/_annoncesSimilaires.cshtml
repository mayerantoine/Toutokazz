@model  IEnumerable<Toutokaz.Domain.Models.tb_ads>
@using Toutokaz.WebUI.Helpers
@using MvcSiteMapProvider.Web.Html
@using PagedList.Mvc

<div class="col-lg-12">
    <div class="well well-sm" style="padding: 0;">
        <div class="row top-classifieds">
            @foreach (var ads in Model)
            {
                <div class="col-md-2">
                    <a href="@Url.Action("details","Annonces", new { id= ads.id_ad, ad_title=ads.ad_title.ToSeoUrl()},null)">
                        <div class="thumbnail">
                            <img alt="@Url.Content(string.IsNullOrEmpty(ads.tb_ad_image.FirstOrDefault().image_filename)? "default-img.jpg" : ads.tb_ad_image.FirstOrDefault().image_filename)" src="@Url.Content(WebConfigurationManager.AppSettings["PhotosDir"] + (string.IsNullOrEmpty(ads.tb_ad_image.FirstOrDefault().image_filename)? "default-img.jpg" : ads.tb_ad_image.FirstOrDefault().image_filename)+ "?width=150&height=150")" class="img-responsive" />
                            <div class="caption">
                                <p style="font-size:12px"> @Html.ActionLink(ads.ad_title, "details", "Annonces", new { id = ads.id_ad, ad_title = ads.ad_title.ToSeoUrl() }, null)<p>
                                    @if (ads.id_section != 9 && ads.id_section != 8)
                                    {
                                    <p style="font-size:12px">
                                        <strong>
                                            <span>@Html.Raw(HttpUtility.HtmlDecode(ads.tb_devise.symbole))</span>
                                            @Html.Label(ads.ad_price + "")
                                        </strong>
                                    </p>
                                    }

                                </div>
                            </div>
                        </a>
                    </div>

            }
        </div>
        <div class="col-lg-offset-5">
            <h4><span class="label label-default">Petites Annonces Similaires</span></h4>
        </div>
    </div>
</div>