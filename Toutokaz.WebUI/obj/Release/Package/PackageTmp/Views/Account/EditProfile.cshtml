 @model Toutokaz.WebUI.Models.ProfileViewModel
@{
    ViewBag.Title = "Toutokazz - Votre Profil";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section categories_menu {
          @{Html.RenderAction("_NavbarCategoriesMenu", "Home");}
}
<div class="col-lg-12">
    @Html.MvcSiteMap().SiteMapPath()
<h3>VOTRE PROFIL</h3>
     <hr />
         <div class="col-lg-3">
             <div class="thumbnail">
                 <img src="~/Content/img/default-img.jpg" />
             </div>
         </div>
        <div class="col-lg-7">                                  
                   @using (Html.BeginForm("editprofile","account", FormMethod.Post, new { @class = "form-horizontal"}))
                        {
                          <div class="form-group"> 
                            @Html.Raw(@ViewBag.Message)
                                @Html.ValidationSummary(true)
                        </div>
                        <div class="form-group">
                            @Html.Hidden("id_account",(object)Model.id_account)
                        </div>

                           <div class="form-group">
                            
                            <label for="lblNom" class="col-sm-3 control-label">Nom</label>
                            <div class="col-sm-9">
                
                                @Html.TextBoxFor(model => model.Nom, new {@class="form-control", id="Nom", placeholder="Nom"})
                                @Html.ValidationMessageFor(m => m.Nom)
                            </div>
                          </div>
                            <div class="form-group">
                            <label for="lblPrenom" class="col-sm-3 control-label">Prenom</label>
                            <div class="col-sm-9">
                       
                                  @Html.TextBoxFor(model => model.Prenom, new {@class="form-control", id="Prenom", placeholder="Prenom"})
                                @Html.ValidationMessageFor(m => m.Prenom)
                            </div>
                          </div>
                           <div class="form-group">
                            <label for="inputEmail" class="col-sm-3 control-label">Alias anonnceur</label>
                            <div class="col-sm-9">
                  
                                    @Html.TextBoxFor(model=>model.alias, new {type="text", @class="form-control", id="alias", placeholder="Votre alias"})
                                @Html.ValidationMessageFor(m => m.alias)
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="inputTelephone" class="col-sm-3 control-label">Telephone</label>
                            <div class="col-sm-9">
                      
                                  @Html.TextBoxFor(model => model.telephone, new {@class="form-control", id="telephone",  placeholder="Telephone" })
                                @Html.ValidationMessageFor(m => m.telephone)
                            </div>
                          </div>
                             <div class="form-group">
                            <label for="inputAddresse" class="col-sm-3 control-label">Votre adresse</label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.address, new {@class="form-control", id="address", col=20, rows=5 })
                                @Html.ValidationMessageFor(m => m.address)
                            </div>
                          </div>

                          <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                              <button id="btnvalider" type="submit" class="btn btn-primary">Valider</button>
                            </div>
                          </div>
                   }
                        
              </div>
</div>  