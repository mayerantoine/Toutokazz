<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <!--[if lt IE 9]
        <script src="~/Scripts/html5shiv.js"  type="text/javascript"></script>"
        <script src="~/Scripts/respond.min.js" type="text/javascript"></script>
    <![endif]-->
    @RenderSection("open_graph_tags", false)
    <link href="~/Content/css/czsale.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/czsale-carousel.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/czsale-responsive.css" rel="stylesheet" />
    <link href="~/Content/css/select2.css" rel="stylesheet" />
    <link href="~/Content/css/social-sharing.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-social.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    @RenderSection("conversion_script", false)
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("index","home")"><small><strong>Petites annonces, pour toutes les occasions</strong></small></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right" style="margin-right:20px">

                    <li class="@Html.ActivePage("Home","Index",null)"><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Accueil</a></li>
                    <li class="@Html.ActivePage("annonces","touteslesannonces",null)"><a href="@Url.Action("touteslesannonces","annonces")">Toutes les annonces</a></li>
                    @if (Request.IsAuthenticated)
                    {
                        if (Roles.IsUserInRole("administrateur"))
                        {
                            <li class="@Html.ActivePage("annonces","Index",null)"><a href="@Url.Action("Index", "annonces", new { area = "Admin" })">Administration</a></li>
                        }
                        else
                        {
                            <li class="@Html.ActivePage("mesAnnonces","Index",null)"><a href="@Url.Action("index","mesannonces")">Mes Annonces</a></li>
                        }
                        <li class="dropdown">
                            @Html.Partial("_LoginPartial_Simple")
                        </li>
                    }
                    else
                    {
                        <li class="@Html.ActivePage("account","Login",null)">
                            <a href="@Url.Action("Login","account")">Mon compte</a>
                        </li>
                        <li class="@Html.ActivePage("Account","Create",null)">
                            <a href="@Url.Action("Create","Account")">Créer un compte </a>
                        </li>

                    }
                  
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    <!-- Fixed navbar-->
    <!--Container Box-->
    <div id="maincontainer" class="container wrapper">
        <div class="row">
            <div class="col-md-12">
                <div id="logo" class="col-lg-4">
                    <div id="logo-img" style="vertical-align:central;font-weight:bold;color:#f99146;font-size:medium">
                        <a href="@Url.Action("index","home")"><img src="@Url.Content("~/Content/img/logo-revamp.png")" alt="Toutokazz - Le meilleur site de petites annonces d'Haiti" /></a>
                    </div>
                </div>
                <div class="col-lg-4 pull-right hidden-xs">
                    <span class="pull-right">
                        <a href="@Url.Action("deposerannonce","annonces")" class="btn btn-success btn-lg navbar-btn add-classified-btn navbar-left" role="button">DEPOSER UNE ANNONCE <br />GRATUITE</a>
                    </span>
                </div>
            </div>
        </div>
   
        @RenderSection("categories_menu", false)
        <div class="row content">
            <div class="col-lg-3 content-left">
                @RenderSection("left", false)
            </div>

            @RenderBody()
        </div>

        <div class="footer">
            <div class="well well-sm">
                <div class="pull-left">
                    <ul class="nav nav-pills">
                        <li><a href="@Url.Action("deposerannonce","annonces")"><span class="glyphicon glyphicon-plus"></span>Déposer une annonce</a></li>
                    </ul>
                </div>
                <div class="pull-right">
                    <ul class="nav nav-pills">
                        <li><a href="@Url.Action("quisommesnous","Home")">Qui sommes-nous?</a></li>
                        <li><a href="@Url.Action("faq","Home")">Aide</a></li>
                        <li><a href="@Url.Action("contact","Contact")"><i class="fa fa-envelope"></i> Contactez-nous</a></li>
                        <li><a href="@Url.Action("conditionsdutilisation","Home")">Conditions d'utilisation</a></li>
                    </ul>
                </div>
                <div class="clearfix">&nbsp;</div>
            </div>
            <div class="pull-right">
                <p class="text-muted"><small>Copyright &copy; 2013-2014, Toutokazz </small></p>
            </div>
        </div>
    </div>

