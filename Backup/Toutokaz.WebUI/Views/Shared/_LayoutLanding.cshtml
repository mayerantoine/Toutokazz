<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Petites Annonces Gratuites, le meilleur d'Haiti</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Toutokazz, Trouver la bonne affaire pour toutes les occasions.
     Le meilleur site de petites annonces d'Haiti. Avec toutokazz, vendez facilement et rapidement vos biens et objet d'occasions sur internet">
    <meta name="keywords" content="toutokazz,toutokaz, annonces, haiti, classified ads, ads,site d'annonce, site annonces, petites, annonces,
         gratuites, annonce, annonces gratuites, immobilier, voiture, maison, auto, moto,occasions, annonces immobilières, affaires,vêtements">
    <link href="~/Content/css/czsale.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/czsale-carousel.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/czsale-responsive.css" rel="stylesheet" />
    <link href="~/Content/css/select2.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <noscript>
        For full functionality of this site it is necessary to enable JavaScript.
        Here are the <a href="http://www.enable-javascript.com/" target="_blank"> instructions how to enable JavaScript in your web browser</a>.
    </noscript>

</head>

<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("index","home")"><small><strong>Petites annonces, pour toutes les occasions</strong></small></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right" style="margin-right:20px">

                    <li class="@Html.ActivePage("Home","Index",null)"><a href="@Url.Action("Index","Home")">Accueil</a></li>
                    <li class="@Html.ActivePage("Annonces","touteslesannonces",null)"><a href="@Url.Action("touteslesannonces","annonces")">Toutes les annonces</a></li>
                    @if (Request.IsAuthenticated) {
                  if (Roles.IsUserInRole("administrateur"))
                 {
            <li class="@Html.ActivePage("Annonces","Index",null)"><a href="@Url.Action("Index", "annonces", new { area = "Admin" })">Administration</a></li>
                 }
                 else{
            <li class="@Html.ActivePage("MesAnnonces","Index",null)"><a href="@Url.Action("index","mesannonces")">Mes Annonces</a></li>
                 }
              }
              else
              {
            <li class="@Html.ActivePage("Account","Moncompte",null)"><a href="@Url.Action("Moncompte","account")">Mon compte</a></li>
              }
                    <li class="dropdown">
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    <!-- Fixed navbar-->
    <!--Container Box-->
    <div id="maincontainer" class="container wrapper">

        <div class="row content">
            @RenderBody()
        </div>

        <div class="footer">
            <div class="well well-sm">
                <div class="pull-left">
                    <ul class="nav nav-pills">
                        <li><a href="@Url.Action("deposerannonce","annonces")"><span class="glyphicon glyphicon-plus"></span>Déposer une annonce</a></li>
                    </ul>
                </div>
                <div class="pull-right">
                    <ul class="nav nav-pills">
                        <li><a href="@Url.Action("quisommesnous","Home")">Qui sommes-nous?</a></li>
                        <li><a href="@Url.Action("faq","Home")">Aide</a></li>
                        <li><a href="@Url.Action("contact","Contact")"><i class="fa fa-envelope"></i> Contactez-nous</a></li>
                        <li><a href="@Url.Action("conditionsdutilisation","Home")">Conditions d'utilisation</a></li>
                    </ul>
                </div>
                <div class="clearfix">&nbsp;</div>
            </div>
            <div class="pull-right">
                <p class="text-muted"><small>Copyright &copy; 2013-2014, Toutokazz </small></p>
            </div>
        </div>
    </div>

    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '330628387121240',
                xfbml: true,
                version: 'v2.2'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.slides.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/toutokaz.js"></script>
    <script src="~/Scripts/select2.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script src="~/Scripts/jquery.fileupload.js"></script>
    <script src="~/Scripts/jquery.fileupload-image.js"></script>
    <script src="~/Scripts/jquery.fileupload-process.js"></script>
    <script src="~/Scripts/jquery.fileupload-validate.js"></script>
    <script src="~/Scripts/jquery.ui.widget.js"></script>
</body>
</html>

