@model IEnumerable<Toutokaz.Domain.Models.tb_section>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
       <div class="row"> 
        <div class="col-lg-offset-8 col-lg-4">
             <a class="btn btn-primary btn-outline btn-sm" href="@Url.Action("Create","Section")"><span class="glyphicon glyphicon-plus"></span>Nouveau</a>
           
                       </div>           
    </div>


  <div class="col-lg-10"> 
  <fieldset>
     <legend>Liste des Sections</legend>
 </fieldset> 
        @Html.Raw(@ViewBag.Message)
                  <table class="table table-condensed table-bordered table-striped table-hover">
                    <tr>
                        <th>Section</th>
                        <th>Description</th>
                        <th></th>
   
                    </tr>                  
                      @foreach (var item in Model)
                      {
                          <tr>
                             

                              <td>@Html.DisplayFor(model=>item.section_title)</td>
                              <td>@Html.DisplayFor(model=>item.section_description)</td>
                              <td>
                                     <a class="btn btn-primary btn-outline btn-xs" href="@Url.Action("Edit","Section",new { id = item.id_section})"><span class="glyphicon glyphicon-edit"></span> Editer</a>
                                    <a class="btn btn-danger btn-outline btn-xs" href="@Url.Action("Delete","Section",new { id = item.id_section})"><span class="glyphicon glyphicon-remove"></span> Supprimer</a>
                        

                              </td>
                          </tr>
                      }
                  </table>

         </div>
